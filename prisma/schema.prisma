// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  firstName String
  lastName  String
  password  String
  quizzes   Quiz[]
  createdAt DateTime @default(now())
}

model Student {
  id        String   @id @default(cuid())
  fullName  String
  nickName  String?
  attempts  Attempt[]
  createdAt DateTime @default(now())
}

model Quiz {
  id        String     @id @default(cuid())
  title     String
  teacher   Teacher    @relation(fields: [teacherId], references: [id])
  teacherId String
  answerMode String   @default("retry-until-correct") // "single-pass" or "retry-until-correct"
  questions Question[]
  attempts  Attempt[]
  createdAt DateTime   @default(now())

  @@index([teacherId])
  @@index([createdAt])
}

model Question {
  id              String    @id @default(cuid())
  text            String
  type            QuestionType
  questionImageUrl String?
  quiz            Quiz      @relation(fields: [quizId], references: [id])
  quizId          String
  options         Option[]
  answers         Answer[]  // ðŸ”¥ added opposite relation

  @@index([quizId])
}

model Option {
  id             String    @id @default(cuid())
  text           String
  isCorrect      Boolean   @default(false)
  answerImageUrl String?
  question       Question  @relation(fields: [questionId], references: [id])
  questionId     String
  answers        Answer[]  // ðŸ”¥ added opposite relation

  @@index([questionId])
}

model Attempt {
  id        String      @id @default(cuid())
  student   Student     @relation(fields: [studentId], references: [id])
  studentId String
  quiz      Quiz        @relation(fields: [quizId], references: [id])
  quizId    String
  answers   Answer[]
  score     Int
  createdAt DateTime    @default(now())

  @@index([quizId])
  @@index([studentId])
  @@index([createdAt])
}

model Answer {
  id         String    @id @default(cuid())
  attempt    Attempt   @relation(fields: [attemptId], references: [id])
  attemptId  String
  question   Question  @relation(fields: [questionId], references: [id])
  questionId String
  option     Option?   @relation(fields: [optionId], references: [id])
  optionId   String?

  @@index([attemptId])
  @@index([questionId])
}

enum QuestionType {
  SINGLE_CHOICE
  MULTI_CHOICE
}
